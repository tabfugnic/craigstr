<h1><%= @category.name %></h1>

<h3><%= @category.description %></h1>


<% if current_user.admin? %>
  <%= link_to "edit category", edit_region_category_path(@region, @category) %>
  <%= link_to "delete category", region_category_path(@region, @category), method: :delete %>
<% end %>

<ul>
  <% @category.ordered_posts.each do |post| %>
    <li>
      <%= link_to post.title, region_post_path(@region, post) %>,
      posted <%= time_ago_in_words(post.created_at) %> ago
    </li>
  <% end %>
</ul>
